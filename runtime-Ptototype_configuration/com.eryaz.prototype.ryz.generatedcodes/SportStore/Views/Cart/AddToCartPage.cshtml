
@{
	Layout = null;
}

@model SportStore.ViewModels.CartLineViewModel





@using(@Html.BeginForm("AddToCart", "Cart", new{}, FormMethod.Post))
{
	@Html.AntiForgeryToken()
	@Html.DisplayNameFor(model => model.Quantity) <br />
	@Html.EditorFor(model => model.Quantity)  <br />
	@Html.ValidationMessageFor(model => model.Quantity) <br />
	@Html.DisplayNameFor(model => model.Cart) <br />
	@Html.DropDownListFor(model => model.Cart_CartId, Model.Cart)<br />
	
	@Html.DisplayNameFor(model => model.Product) <br />
	@Html.DropDownListFor(model => model.Product_ProductId, Model.Product)<br />
	
	
	<input type="submit" name="AddToCart" value="Add To Cart">
}

