
@{
	Layout = null;
}

@model SportStore.ViewModels.ProductViewModel





@using(@Html.BeginForm("EditProduct", "Admin", new{}, FormMethod.Post))
{
	@Html.AntiForgeryToken()
	@Html.HiddenFor(m => m.ProductId)
	@Html.DisplayNameFor(model => model.Name) <br />
	@Html.EditorFor(model => model.Name)  <br />
	@Html.ValidationMessageFor(model => model.Name) <br />
	
	@Html.DisplayNameFor(model => model.Category) <br />
	@Html.EditorFor(model => model.Category)  <br />
	@Html.ValidationMessageFor(model => model.Category) <br />
	
	@Html.DisplayNameFor(model => model.Description) <br />
	@Html.EditorFor(model => model.Description)  <br />
	@Html.ValidationMessageFor(model => model.Description) <br />
	
	@Html.DisplayNameFor(model => model.Price) <br />
	@Html.EditorFor(model => model.Price)  <br />
	@Html.ValidationMessageFor(model => model.Price) <br />
	@Html.DisplayNameFor(model => model.CartLines) <br />
	@Html.ListBoxFor(model => model.CartLines_CartLineId, Model.CartLines)<br />
	
	
	<input type="submit" name="EditaProduct" value="Edit a Product">
}

